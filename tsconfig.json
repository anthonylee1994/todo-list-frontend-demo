{
    "compilerOptions": {
        "allowJs": true,
        "noUnusedLocals": false,
        "sourceMap": true,
        "target": "es6",
        "module": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "removeComments": true,
        "strictNullChecks": false,
        "outDir": "build",
        "lib": [
            "es6",
            "es7",
            "dom"
        ]
    },
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "blueprints/**/*",
        "**/__tests__/*"
    ]
}